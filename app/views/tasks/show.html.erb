<div class="container">
  <h1><%= @task.title %></h1>

  <p><strong>Description:</strong> <%= @task.description %></p>
  <p><strong>Status:</strong> <%= @task.status.capitalize %></p>
  <p><strong>Created At:</strong> <%= @task.created_at.strftime("%b %d, %Y %l:%M %p") %></p>
  <p><strong>Finish By:</strong> <%= @task.finished_at&.strftime("%b %d, %Y %l:%M %p") || "Not set" %></p>

  <div style="margin-top: 20px;">
    <%= link_to "â† Back to Tasks", root_path, class: "btn btn-secondary" %>

    <% unless @task.status == "completed" %>
      <%= button_to "Mark as Completed", complete_task_path(@task), method: :patch, class: "btn btn-success", form: { data: { turbo: false } } %>
    <% end %>

    <%= button_to "Delete Task", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
  </div>
</div>
